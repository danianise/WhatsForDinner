<body>
    <style>
        .content{
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .titleImage{
            display: flex;
            flex-direction: column;
            font-family: sans-serif;
            margin-right: 10px;
            align-items: center;
        }
        .ingredientsAllergensSeeAlso {
            font-family: sans-serif;
            display: inline-flex;
            margin-left: 10px;
            align-items: center;
        }

        img {
            height: 50vh;
            width: 40vw;
            border-radius: 20px;
        }

        a {
            text-decoration: none;
            color: white;
        }

        h1 {
            text-align: center;
            font-family: 'Fontdiner Swanky', cursive;
            color: rgb(156, 13, 13);
            text-shadow:
            0 0 7px #fff,
            0 0 10px #fff,
            0 0 21px #fff,
            0 0 42px red,
            0 0 82px red,
            0 0 92px red,
            0 0 102px red,
            0 0 151px red;
        }

        .buttons{
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }

        button, form {
            margin: 5px;
        }

        li {
            padding: 0;
            margin: -10px;
        }
    </style>

    <h1>What's For Dinner?</h1>

    <div class="content">
        <div class="titleImage">
            <h2><%=recipes.title%></h2>
            <a href="<%=recipes.directionsURL%>">
                <img src="<%=recipes.imageURL%>">
            </a>
        </div>

        <div class="ingredientsAllergensSeeAlso">
            <div class="ingredients">
                <h4>Ingredients:</h4> 
                <%let ingredientList = recipes.ingredients%>
                <%ingredientList.forEach(eachIngredient => {%>
                    <ul>
                        <li>
                            <%=eachIngredient%>
                        </li>
                    </ul>
                <%})%>
            </div>

            <div class="allergensSeeAlso">
                <h4>Allergens:</h4> 
                <%let allergenList = recipes.allergensContained%>
                <%allergenList.forEach(eachAllergen => {%>
                    <ul>
                        <li>
                            <%=eachAllergen%>
                        </li>
                    </ul>
                <%})%>

                <%if(recipes.seeAlso.length !== 0) {%>
                    <h4>See Also:</h4> 
                    <%recipes.seeAlso.forEach(seeAlsoLinks => {%>
                        <ul>
                            <li>
                                <a href="<%=seeAlsoLinks.url%>"><%=seeAlsoLinks.title%></a>
                            </li>
                        </ul>
                    <%})%>
                <%}%>
            </div>
        </div>
    </div>

    <div class="buttons">
        <button><a href="<%=recipes.directionsURL%>">Directions</a></button><br />
        <button><a href="/recipes/<%=recipes.id%>/edit">Edit</a></button>
        <form action="/recipes/<%=recipes.id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
         </form>
        <button><a href="/recipes">Home</a></button>
    </div>
</body>
</html>