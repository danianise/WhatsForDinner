<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <div class="cardsContainer">
        <%searchResults.forEach(resultRecipe => {%>
            <div class="recipeCards">
                <a href="/recipes/<%=resultRecipe.id%>">
                    <img src="<%=resultRecipe.imageURL%>">
                </a>
            </div>
            <div class="recipeTitle">
                <a href="/recipes/<%=resultRecipe.id%>">
                    <h3><%=resultRecipe.title%></h3>
                </a>
            </div>
        <%})%>
    </div>
    <div class="buttons">
        <button class="button"><a href="/recipes">Home</a></button>
        <button class="button"><a href="/recipes/allergenFilter">Back</a></button>
    </div>
</body>
</html>